{
  "name": "vite-plugin-mcp-build",
  "version": "0.0.1",
  "description": "Vite plugin to build and serve MCP (Model Context Protocol) servers",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./define": {
      "import": "./dist/define.js",
      "types": "./dist/define.d.ts"
    }
  },
  "files": [
    "dist",
    "src-dev"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "vite",
    "plugin",
    "mcp",
    "model-context-protocol",
    "build-tool"
  ],
  "author": "Your Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yracnet/vite-plugin-mcp-build"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "vite": "^5.0.0 || ^7.0.0",
    "glob": "^13.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^24.10.1",
    "glob": "^13.0.1",
    "globals": "^16.5.0",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}